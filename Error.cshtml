@{ 
    Layout="~/shared/layout/_layout.cshtml";
    var message = UrlData[0] == "404" ? "File Not Found" : "ERROR!"; 
    Page.Title = message; 
} 

@section menu{
    <ul id="simple-menu">           
        <li><a href="~/default" class="current"><span>Home</span></a></li>
        <li><a href="~/aboutus"><span>About Us</span></a></li>
        <li><a href="~/faqs"><span>FAQs</span></a></li>
        <li><a href="~/login"><span>Log In</span></a></li>
        <li><a href="~/contactus"><span>Contact Us</span></a></li>
    </ul>
}
<div class="content">
    <div style="padding: 10px;">
        <h1>@message</h1> 
        <p> 
        Unfortunately an error has occurred and 
        we were unable to process your request. 
        </p> 
        <p> 
        <br />Please try browsing the again. 
        </p> 
    </div>
</div>